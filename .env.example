# Best Streamlit Website - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# General Configuration
# =============================================================================

# Deployment mode: development | production
DEPLOYMENT_MODE=development

# =============================================================================
# Database Configuration
# =============================================================================

# For local development (SQLite - default)
# DATABASE_URL=sqlite:///./data/tasks.db
# SCHEDULER_DATABASE_URL=sqlite:///./data/scheduler.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+psycopg2://bsw:your_password@postgres:5432/bsw
# PLATFORM_DATABASE_URL=postgresql+psycopg2://bsw:your_password@postgres:5432/bsw
# POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# Jenkins Configuration
# =============================================================================

# Jenkins server URL (local or remote)
JENKINS_BASE_URL=http://jenkins:8080

# Jenkins authentication (optional for anonymous access)
JENKINS_USERNAME=
JENKINS_API_TOKEN=

# SSL verification
JENKINS_VERIFY_SSL=false

# MCP client authentication token
JENKINS_MCP_CLIENT_TOKEN=dev-jenkins-mcp-token

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Kubeconfig path (leave empty to use ~/.kube/config)
K8S_KUBECONFIG=

# Kubernetes context to use (leave empty for default)
K8S_CONTEXT=

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker host (leave empty for default socket)
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# Nexus Configuration (Optional)
# =============================================================================

# Nexus repository URL
NEXUS_BASE_URL=http://nexus:8081

# Nexus authentication
NEXUS_USERNAME=
NEXUS_PASSWORD=

# =============================================================================
# SonarQube Configuration (Optional)
# =============================================================================

# SonarQube server URL
SONARQUBE_BASE_URL=http://sonarqube:9000

# SonarQube authentication token
SONARQUBE_TOKEN=

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server URL
OLLAMA_BASE_URL=http://ollama:11434

# Ollama model to use
# Development: tinyllama (637MB), phi:mini (1.6GB)
# Production: qwen2.5:7b-instruct-q6_K (4.8GB), llama3.2:3b (2GB)
OLLAMA_MODEL=tinyllama

# Enable/disable Ollama (true/false)
OLLAMA_ENABLED=false

# Ollama generation parameters
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_MAX_TOKENS=2048

# =============================================================================
# MCP Server Transport Configuration
# =============================================================================

# MCP servers can use stdio (subprocess) or http (remote service)
# In Docker Compose setup, all MCP servers run as HTTP services

# Docker MCP Server
DOCKER_MCP_TRANSPORT=http
DOCKER_MCP_URL=http://localhost:8001

# Jenkins MCP Server
JENKINS_MCP_TRANSPORT=http
JENKINS_MCP_URL=http://localhost:8002

# Kubernetes MCP Server
KUBERNETES_MCP_TRANSPORT=http
KUBERNETES_MCP_URL=http://localhost:8003

# Nexus MCP Server (optional)
NEXUS_MCP_TRANSPORT=http
NEXUS_MCP_URL=http://localhost:8004

# Scheduler MCP Server
SCHEDULER_MCP_TRANSPORT=http
SCHEDULER_MCP_URL=http://localhost:8010

# For Streamlit UI to connect to MCP servers, use these overrides
STREAMLIT_DOCKER_MCP_TRANSPORT=http
STREAMLIT_DOCKER_MCP_URL=http://localhost:8001

STREAMLIT_JENKINS_MCP_TRANSPORT=http
STREAMLIT_JENKINS_MCP_URL=http://localhost:8002

STREAMLIT_KUBERNETES_MCP_TRANSPORT=http
STREAMLIT_KUBERNETES_MCP_URL=http://localhost:8003

STREAMLIT_NEXUS_MCP_TRANSPORT=http
STREAMLIT_NEXUS_MCP_URL=http://localhost:8004

STREAMLIT_SCHEDULER_MCP_TRANSPORT=http
STREAMLIT_SCHEDULER_MCP_URL=http://localhost:8010

# =============================================================================
# Scheduler Configuration
# =============================================================================

# How often the scheduler checks for jobs (seconds)
SCHEDULER_TICK_SECONDS=5

# Maximum jobs to execute per tick
SCHEDULER_MAX_JOBS_PER_TICK=20

# Auto-create demo jobs on first run (true/false)
SCHEDULER_BOOTSTRAP_JOBS=true

# =============================================================================
# Redis Configuration (Production)
# =============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8502,http://127.0.0.1:8502
